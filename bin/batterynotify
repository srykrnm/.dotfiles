#!/bin/bash

sleep 5

while true
do
	battery_level=`acpi -b | grep -P -o '[0-9]+(?=%)'`
	battery_state=`acpi | awk '{print $3}'`
	if [ "$battery_state" == Discharging, ]  && [ $battery_level -le 20  ]; then	
        dunstify "Battery Low!" "$battery_level"% -u critical -r 69 -i $HOME/Icons/low_battery.png
	elif [ "$battery_state" == Not ]; then
		dunstify "Charger connected" "$battery_level"% -u low -r 69 -i $HOME/Icons/charging_battery.png
	elif [ "$battery_state" == Full, ]; then
		dunstify "Battery Full" "$battery_level"% -u normal -r 69 -i $HOME/Icons/full_battery.png
	fi
done

